{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/test/*"
    ],
    "typedocOptions": {
        "theme": "markdown",
        "platform": "docusaurus",
        "excludeExternals": true,
        "ignoreCompilerErrors": true,
        "mode": "file",
        "name": "prismarine-gym",
        "out": "docs"
    }
}